#include <iostream>
#include <string>
using namespace std;

struct node
{
    int phone_num = 0;
    string name = "";
    string address = "";
    string email = "";

    node *top = NULL;
    node *bottom = NULL;
    node *next = NULL;
    node *prev = NULL;
};

class List
{
    int rowMax; // maximum number of rows in the list
    int colMax; // maximum number of cloumns in the list
    node *headptr;

public:
    List(int rm = 0, int cm = 0) // constructor
    {
        rowMax = rm;
        colMax = cm;
        headptr = NULL;
    }

    void insertNode()
    {
    }

    void deleteNode()
    {
    }
};

void menu()
{
    cout << "Menu" << endl;
    cout << "1-Create a list" << endl;
    cout << "2-Insert a number in the directory" << endl;
    cout << "3-Delete a number from the directory" << endl;
    cout << "4-Search for a number" << endl;
    cout << "5-Display all the numbers in the directory" << endl;
    cout << "0-EXIT" << endl;
}

int main()
{
    int input;
    do
    {
        menu();
        cout << endl
             << "Select option from the menu: ";
        cin >> input;

        switch (input)
        {
        case 1:
        {

            break;
        }
        case 2:
        {

            break;
        }
        case 3:
        {

            break;
        }
        case 4:
        {

            break;
        }
        case 5:
        {

            break;
        }
        case 0:
        {
            cout << endl
                 << "Program Exited!";
            break;
        }
        default:
            cout << "invalid input" << endl;
        }

    } while (input != 0);

    return 0;
}
